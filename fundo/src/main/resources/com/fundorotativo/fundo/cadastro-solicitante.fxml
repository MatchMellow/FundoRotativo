<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.fundorotativo.fundo.CadastroSolicitanteController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Cadastro de Solicitante" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- Campos para cadastro -->
    <Label text="Nome:"/>
    <TextField fx:id="nomeTextField" promptText="Digite o nome"/>

    <Label text="CPF:"/>
    <TextField fx:id="cpfTextField" promptText="Digite o CPF"/>

    <Label text="RG:"/>
    <TextField fx:id="rgTextField" promptText="Digite o RG"/>

    <Label text="Endereço:"/>
    <TextField fx:id="enderecoTextField" promptText="Digite o endereço"/>

    <Label text="Bairro:"/>
    <TextField fx:id="bairroTextField" promptText="Digite o bairro"/>

    <!-- Botões -->
    <Button text="Cadastrar" onAction="#onCadastrarClick"/>
    <Button text="Voltar" onAction="#onVoltarButtonClick"/>
</VBox>
